" ======================
" VIM Configuration
" ======================

" Make sure everything works like we think it will
set nocompatible


" Turn off annoying beeps and bells
set noerrorbells visualbell t_vb=
if has('autocmd')
  autocmd GUIEnter * set visualbell t_vb=
endif


" Colorscheme and font
filetype plugin indent on
syntax enable
set background=dark
let g:solarized_italic=0
colorscheme solarized

set anti enc=utf-8
set guifont=Sauce\ Code\ Powerline:h10.5

set lines=50 columns=150

" Remove toolbar
set guioptions-=T


" Better copy & paste
set pastetoggle=<F2>
set clipboard=unnamed


" Mouse and backspace
set mouse=a
set bs=2


" Rebind <Leader> key
let mapleader=","


" Remap ctrl-s to save
:nmap <c-s> :w<CR>
:imap <c-s> <Esc>:w<CR>a
:imap <c-s> <Esc><c-s>


" Bind nohl
" Removes highlight of your last search
noremap <C-n> :nohl<CR>
vnoremap <C-n> :nohl<CR>
inoremap <c-n> :nohl<CR>


" Bind Ctrl+<movement> keys to move around windows
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
map <C-h> <C-w>h


" Easier movement between tabs
map <Leader>n <esc>:tabprevious<CR>
map <Leader>m <esc>:tabnext<CR>


" Map sort function to a key
noremap <Leader>s :sort<CR>


" Quickly edit/reload the vimrc file
nmap <silent> <leader>ev :e $MYGVIMRC<CR>
nmap <silent> <leader>sv :so $MYGVIMRC<CR>


" Easier moving of code blocks
vnoremap < <gv
vnoremap > >gv


" Resize current window
nnoremap <A-left> :vertical resize -20<CR>
nnoremap <A-right> :vertical resize +20<CR>
nnoremap <A-up> :resize -10<CR>
nnoremap <A-down> :resize +10<CR>


" Showing line numbers and length
set number   " show line numbers
set tw=90    " set width of document
set nowrap   " dont automatically wrap on load
set fo-=t    " don't automatically wrap text when typing
set colorcolumn=90
set autoindent
set copyindent
set relativenumber



" Userful settings
set history=700
set undolevels=700


" Setup indent settings per file
set tabstop=4
set softtabstop=4
set shiftwidth=4
set shiftround
set expandtab
set smarttab


" Make search case insensitve
set hlsearch
set incsearch
set ignorecase
set smartcase


" Diable backup and swap files
set nobackup
set nowritebackup
set noswapfile


" Change <F1> to <ESC> so windows help won't show up
inoremap <F1> <ESC>
nnoremap <F1> <ESC>
vnoremap <F1> <ESC>


" Use semi-colon instead of colon for commands
nnoremap ; :


" Map a key to remove all trailing whitespace in the current file
nnoremap <leader>W :%s/\s\+$//<cr>:let @/=''<CR>


" ==========================
" Vim Addon Settings
" ==========================

" Vim Powerline Setup

" Always show the statusline
set laststatus=2

python from powerline.vim import setup as powerline_setup
python powerline_setup()
python del powerline_setup

" CtrlP
let g:ctrlp_max_height = 30
let g:ctrlp_working_path_mode = 'ra'
set wildignore+=*.pyc
 
" Syntastic
let g:syntastic_python_checkers = ['flake8']
let g:syntastic_python_flake8_args='--max-line-length=90 --max-complexity=10 --ignore=D203'

" FontSize Options
nmap <silent> <Leader>= <Plug>FontsizeBegin
nmap <silent> <Leader>+ <Plug>FontsizeInc
nmap <silent> <Leader>- <Plug>FontsizeDec
nmap <silent> <Leader>0 <Plug>FontsizeDefault
